<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/promptDescription"
        android:textSize="20sp"
        android:text="Type description:"
        android:layout_width="240dp"
        android:layout_height="25dp"/>

    <EditText
        android:id="@+id/editDescription"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/promptDescription"/>

    <TextView
        android:id="@+id/promptNotes"
        android:textSize="20sp"
        android:text="Type notes:"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_below="@id/editDescription"/>
    <EditText
        android:id="@+id/editNotes"
        android:textSize="20sp"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@id/promptNotes" />

    <Button
        android:id="@+id/buttonSave"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Save"
        android:onClick="goSave"
        android:layout_below="@id/editNotes"
        />


    <Button
        android:id="@+id/buttonCancel"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:onClick="goCancel"
        android:layout_toRightOf="@id/buttonSave"
        android:layout_below="@id/editNotes"/>
</RelativeLayout>